{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"sourceMap": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"@config": ["config"],
			"@interfaces": ["interfaces"],
			"@plugins": ["plugins"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.json", ".env"],
	"exclude": ["node_modules", "src/logs"]
}
